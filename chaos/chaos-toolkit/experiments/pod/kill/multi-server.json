{
    "version": "1.0.0",
    "title": "Multi-Pod Termination",
    "description": "Orchestrates termination of one pod from each server deployment (server1, server2, server3) simultaneously.",
    "tags": ["kubernetes", "pod", "termination", "multi-target"],
    "configuration": {
        "k8s_config": "~/.kube/config"
    },
    "method": [
        {
            "type": "action",
            "name": "kill-server1",
            "provider": {
                "type": "process",
                "path": "chaos",
                "arguments": "run experiments/pod/kill/server1.json"
            },
            "background": true
        },
        {
            "type": "action",
            "name": "kill-server2",
            "provider": {
                "type": "process",
                "path": "chaos",
                "arguments": "run experiments/pod/kill/server2.json"
            },
            "background": true
        },
        {
            "type": "action",
            "name": "kill-server3",
            "provider": {
                "type": "process",
                "path": "chaos",
                "arguments": "run experiments/pod/kill/server3.json"
            }
        }
    ]
}

