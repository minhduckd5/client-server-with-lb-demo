{
    "version": "1.0.0",
    "title": "Resilience of the Web Server when a replica is deleted",
    "description": "We expect the application to remain available even if one of the server pods is deleted.",
    "tags": ["kubernetes", "availability"],
    "steady-state-hypothesis": {
        "title": "Application is available",
        "probes": [
            {
                "type": "probe",
                "name": "app-responds-200",
                "tolerance": 200,
                "provider": {
                    "type": "http",
                    "url": "http://localhost:80", 
                    "timeout": 5
                }
            }
        ]
    },
    "method": [
        {
            "type": "action",
            "name": "terminate-one-pod",
            "provider": {
                "type": "python",
                "module": "chaosk8s.pod.actions",
                "func": "terminate_pods",
                "arguments": {
                    "label_selector": "app=server",
                    "rand": true,
                    "ns": "default"
                }
            },
            "pauses": {
                "after": 5
            }
        }
    ],
    "rollbacks": []
}



