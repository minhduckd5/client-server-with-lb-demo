{
    "version": "1.0.0",
    "title": "Layered Attack: Multi-Vector Chaos",
    "description": "Orchestrates a complex attack by combining Multi-Pod CPU Stress and Multi-Pod Termination.",
    "tags": ["kubernetes", "infrastructure", "chaos-mesh", "orchestration", "layered"],
    "configuration": {
        "k8s_config": "~/.kube/config"
    },
    "steady-state-hypothesis": {
        "title": "System responds",
        "probes": [
            {
                "type": "probe",
                "name": "app-responds",
                "tolerance": 200,
                "provider": {
                    "type": "http",
                    "url": "http://192.168.1.247/api/health",
                    "timeout": 5
                }
            }
        ]
    },
    "method": [
        {
            "type": "action",
            "name": "multi-cpu-stress",
            "provider": {
                "type": "process",
                "path": "chaos",
                "arguments": "run experiments/k8s-cpu-stress.json"
            },
            "background": true
        },
        {
            "type": "action",
            "name": "multi-pod-kill",
            "provider": {
                "type": "process",
                "path": "chaos",
                "arguments": "run experiments/k8s-pod-kill-multi.json"
            },
            "pauses": {
                "after": 60
            }
        }
    ]
}
